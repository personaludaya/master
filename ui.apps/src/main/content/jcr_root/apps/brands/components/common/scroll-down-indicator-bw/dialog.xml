<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Dialog"
    xtype="dialog">
    <items jcr:primaryType="cq:TabPanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <general
                jcr:primaryType="cq:Panel"
                title="General">
                <items jcr:primaryType="cq:WidgetCollection">
                    <hide-in-mobile
	                    jcr:primaryType="cq:Widget"
	                    fieldDescription="Check if this should be hidden in mobile."
	                    fieldLabel="Hide in Mobile"
	                    name="./hide-in-mobile"
	                    type="checkbox"
	                    xtype="selection"/>
	                <hide-scroll-text
	                    jcr:primaryType="cq:Widget"
	                    fieldDescription="Check if this should be hidden."
	                    fieldLabel="Hide Scroll Text"
	                    name="./hide-scroll-text"
	                    type="checkbox"
	                    xtype="selection"/>
	                <scroll-text-style
	                    jcr:primaryType="cq:Widget"
	                    fieldLabel="CTA Style"
	                    name="./scroll-text-style"
	                    optionsProvider="CQ.utils.Css.getCtaStyleList"
	                    type="select"
	                    xtype="selection"/>
                </items>
            </general>
        </items>
    </items>
</jcr:root>
